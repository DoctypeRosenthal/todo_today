@import "styles/constants.styl"

shadow_default(color = black)
  box-shadow 1px 3px 10px -2px color

icon(name)
  interpolated = "../public/" + name + ".svg"
  background-repeat no-repeat
  background-position center
  background-image url(interpolated)

soft_bg_colors()
  &.red
    background-color soft_red

  &.blue
    background-color soft_blue

  &.yellow
    background-color soft_yellow