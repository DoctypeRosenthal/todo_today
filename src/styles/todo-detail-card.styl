
.todo-detail-card
  padding big_spacing
  display flex
  flex-direction column

  shadow_default()

  &__map
    background grey
    height 300px
    margin -1*big_spacing -1*big_spacing medium_spacing
    iframe
      width 100%
      height 100%
      border none

  &__actions
    position absolute
    top big_spacing
    right big_spacing

    .btn
      color white
      text-shadow 1px 1px 3px dark_gray

  &__title,
  &__location,
  &__time,
  &__description
    position relative
    line-height 1.35em
    padding-left 2*big_spacing
    margin default_spacing 0

    &:before
      position absolute
      left 0
      top 0
      width 2*big_spacing
      display flex
      align-items start
      justify-content center
      height 100%

  &__title
    icon("circle")
    &:before
      color $green
      font-size .7em

  &__location
    icon("location")

  &__time
    icon("clock")

  &__description
    icon("text-right")

  .btn--check
    align-self flex-end





