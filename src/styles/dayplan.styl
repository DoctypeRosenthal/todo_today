@import "styles/mixins.styl"

.dayplan
  position relative
  width width_dayplan
  box-shadow box_shadow
  margin 1em
  line-height 1.5em

  soft_bg_colors()

  button
    padding 1em
    background-color transparent
    border none

    &.pinned,
    &.unpinned
      background-repeat no-repeat
      background-position center center
      background-size 24px 24px
      height 32px
      width 32px

    &.pinned
      icon("pinned")

    &.unpinned
      icon("unpinned")

  &__header
    padding big_spacing big_spacing default_spacing
    border-bottom 1px solid rgba(black, 0.1)

  &__main
    padding default_spacing big_spacing

  &__footer
    border-top 1px solid rgba(black, 0.1)
    padding default_spacing big_spacing big_spacing

  &__title
    display flex
    justify-content space-between
    align-items center

    > input
      font-family inherit
      font-size inherit
      font-weight inherit
      color inherit
      border-width 1px
      border-style none none solid
      background none
      display inline-block
      padding 5px
      margin-left -5px


  &__subtitle
    font-size .75rem
    text-transform: uppercase
    letter-spacing 1px
    opacity 0.75

  &__color-picker-btn
      position: relative
      icon("palette")

      &:focus
        background-color rgba(0,0,0,0.2)

  &__color-picker
    position absolute
    z-index 1
    background white
    border 1px solid light_gray
    box-shadow box_shadow
    padding default_spacing
    display none
    top 100%
    left 100%

    &.visible
      display flex

    > button
      border 1px solid light_gray
      border-radius 100%

      soft_bg_colors()

      & + button
        margin-left default_spacing

  &__delete-btn
    icon("trash")