.timeline
  height 100%
  position: relative
  box-sizing: border-box
  padding: 70px 0
  display: grid
  grid-template-columns: 100px 1px todo_width
  grid-column-gap: 0
  grid-row-gap: 0
  grid-auto-flow: column
  transition: .3s

  &__separator
    width: 1px
    background: linear-gradient(rgb(255, 255, 255) 5%, grey 10%, grey 90%, rgb(255, 255, 255) 95%)
    transform: scaleY(1.25)
    transform-origin: center
    position relative

  &__now-line
    position absolute
    width 100%
    height 1px
    background red
    top 300px // TODO replace with actual time
    left 50px

  &__now-text
    position absolute
    font-size .9em
    color red
    top -.5em
    line-height 1em
    width 50px
    padding-right .5em
    text-align right
    right 100%
