
.timeline__filter 
  position: relative
  height: 100%



.timeline__filter::before,
.timeline__filter::after 
  position: absolute
  content: ""
  height: 10%
  width: 100%
  left: 0
  z-index: 1



.timeline__filter::before 
  top: 0
  background: linear-gradient(rgb(255, 255, 255) 10%, rgba(0,0,0,0) 100%)



.timeline__filter::after 
  bottom: 0
  background: linear-gradient(rgba(0,0,0,0) 0%, rgb(255, 255, 255) 90%)




.timeline 
  flex-grow:1
  position: relative
  box-sizing: border-box
  overflow: hidden
  padding: 70px 0
  display: grid
  grid-template-columns: 100px 1px todo_width
  grid-column-gap: 0
  grid-row-gap: 0
  grid-auto-flow: column
  transition: .3s


.timeline__separator 
  width: 1px
  background: grey
  transform: scaleY(1.3)
  transform-origin: center





