@import "~@fortawesome/fontawesome-free/css/solid.css"
@require "constants"

[data-elm-hot="true"]
  height inherit

body
  font-style: normal;
  font-variant-ligatures: normal;
  font-variant-caps: normal;
  font-variant-numeric: normal;
  font-variant-east-asian: normal;
  font-weight: normal;
  font-stretch: normal;
  line-height: 150%;
  font-family: "Source Sans Pro", sans-serif;
  margin 0
  text-align left
  padding big_spacing
  cursor: default

h1
  font-size 3rem

h2
  font-size 1.5rem

h1, h2, h3, h4, h5
  margin 0
  font-weight normal

img
  margin 20px 0
  max-width 200px

:focus
  outline none