.todo
  color: white
  font-weight: bold
  display: flex
  justify-content: flex-start
  align-items: center
  padding: 8px
  margin-right: 1rem
  box-shadow: 1px 2px 0 0 rgba(66, 66, 66, 0)
  transition: box-shadow .3s

  &__check
    position relative
    margin-left -1em
    margin-right 2em

    &:before
      box-sizing border-box
      position absolute
      top 0
      left 1em
      width 1em
      height 1em
      border-radius 5px
      border 2px solid white
      background-color transparent
      display block
      content ""
      margin-right 5px

    &:checked:before
      background-color red



  &--hover
    box-shadow: 1px 3px 10px -2px rgba(66, 66, 66, 0.84)
