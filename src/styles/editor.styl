.editor
  position fixed
  height 100%
  width 100%
  top 0
  right 0
  display flex
  align-items: stretch
  justify-content: flex-end

  &__close-btn
    height 3rem

    &::before
      content "X"

  &__background
    position absolute
    z-index 1
    height 100%
    width 100%
    top 0
    right 0
    background rgba(0,0,0,0.5)

  &__inner
    position: relative
    z-index 2
    background white
    box-shadow 0 0 50px -15px #4c5265
    display flex
    flex-direction row
    width 100%

  &__header
    display flex
    justify-content space-between
    align-items center

  &__sidebar
    display flex
    flex-direction column
    justify-content flex-start
    padding big_spacing
    align-items stretch
    background #f5f5f5



